<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/HibernateMapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class catalog = "hibernate" name="pojo.SinhVien" table="sinhvien">
        <id name="MSSV" type="string">
            <column length="10" name="MSSV"/>
            <generator class="assigned"/>
        </id>

        <many-to-one class="pojo.LopHoc" name="MaLop" fetch="join" lazy="false" cascade="none">
            <column length="10" name="MaLop" not-null="true"/>
        </many-to-one>

        <property name="HoTen" type="string">
            <column length="45" name="HoTen"/>
        </property>

        <property name="GioiTinh" type="string">
            <column length="10" name="GioiTinh"/>
        </property>

        <property name="CMND" type="string">
            <column length="15" name="CMND"/>
        </property>
    </class>
</hibernate-mapping>